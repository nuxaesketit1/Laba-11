#include <iostream>
#include <cmath>
#include <iomanip>
using namespace std;

int main() {

	setlocale(0, "");

	int n, l = 0, k = 0;

	do {

		cout << "Введите целое число N (N > 1)  : ";
		cin >> n;
		cout << endl;

		if (n > 1) {

			while (k < n)
			{
				l++;
				k += l;

			}

			cout << "Сумма числа " << l << " равна : " << k << endl;
			break;

		}
		else
		{
			cout << "Повторите ввод данных!.." << endl;
		}

	} while (true);

	cout << endl;

	system("pause");

	return 0;

}
